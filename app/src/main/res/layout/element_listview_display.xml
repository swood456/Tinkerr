<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/element_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="18sp"
        android:text="@string/list_element_default_name"
        android:layout_alignTop="@+id/element_display_description"
        android:layout_toRightOf="@+id/ratingBar_element_rating"
        android:layout_alignBottom="@+id/ratingBar_element_rating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/element_display_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_element_default_description"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/ratingBar_element_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_below="@+id/element_display_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
