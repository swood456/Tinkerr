<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stephen.androidrater.HomeActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/button_home_add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_button_goto_add"
            android:layout_centerHorizontal="true"
            android:onClick="make_new_element"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_home_add_new"
            android:text="@string/home_button_goto_search"
            android:layout_centerHorizontal="true"
            android:onClick="search_database"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
